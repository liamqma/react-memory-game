body
  background url(images/background.jpg) no-repeat center center fixed
  background-size cover

.loading
  background-color: rgba(0, 0, 0, 0.5);
  position fixed
  top 0
  left 0
  width 100%
  height 100%

.sk-spinner-wave.sk-spinner
  height 70px
  position: relative;
  top: 50%;
  transform: translateY(-50%);
  div
    background-color #ffffff
    width 7px
    margin 0 3px 0 0

.retry
  position absolute
  top 10px
  right 10px

#game
  margin 0 auto
  width 660px

  .retry
    margin-top 20px
  .status
    text-align center
    font-size 35px
    font-weight bold
    color whitesmoke

  .flip-container
    float left
    margin-right 15px
    margin-bottom 15px
    font-size 150px

  .flip-container, .front, .back
    width 150px
    height 150px

    .flipper
      transition 0.6s
      transform-style preserve-3d
      position relative
      &.flipped
        transform rotateY(180deg)

      .front, .back
        box-shadow 1px 1px 2px black
        line-height 150px
        border-radius 10px
        text-align center
        backface-visibility hidden
        background-color white
        position absolute
        top 0
        left 0

      .front
        z-index 2
        transform rotateY(0deg)

      .back
        background-size cover
        transform rotateY(180deg)



